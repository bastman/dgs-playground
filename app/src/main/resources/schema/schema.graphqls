type Query {
    shows(titleFilter: String): [Show]
    reviews:[Review]
}

type Show {
    id: Int!
    title: String!
    releaseYear: Int
    reviews: [Review]
}

type Review {
    id: Int!
    showId: Int!
    username: String
    starScore: Int
    submittedDate: DateTime
}

type Mutation {
    addShow(show: AddShowInput): Show
    addReview(review: AddReviewInput): Review
}

input AddShowInput {
    title: String!
    releaseYear: Int
}

input AddReviewInput {
    showId: Int!
    username: String!
    starScore: Int!
}

scalar DateTime
